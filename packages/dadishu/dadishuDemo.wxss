.main {
  position: relative;
  padding: 20rpx;
  background: rgb(133, 211, 133);
}

.game-area {
  position: relative;
  width: 600rpx;
  height: 600rpx;
  margin: 100rpx auto;
}
.hole-main{
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}

.hole {
  width: 160rpx;
  height: 60rpx;
  position: absolute;
  top: var(--top);
  left: var(--left);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 90%;
  background: rgb(148, 75, 33);
}

.cat {
  width: 122rpx;
  height: 100rpx;
  position: absolute;
  top: 60rpx;
  /* display: none; */
}

.active-cat {
  width: 122rpx;
  height: 100rpx;
  position: absolute;
  transform: translateY(-45rpx);
  transition: transform 0.4s ease-out;
  /* top: -100rpx; */
}

.reset{
  margin-top: 40rpx;
}