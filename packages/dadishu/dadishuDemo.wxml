<view class="main">
  <view class="game-area">
    <view wx:for="{{holes}}" class="hole" style="--left:{{item.x+'rpx'}};--top:{{item.y+'rpx'}}">
      <image src="{{item.active?'../../static/image/cat-2.png':'cat'}}" class="{{item.active?'active-cat':'cat'}}" mode="widthFix"  bindtap="hit"/>
    </view>
  </view>
  <button bindtap="start">开始</button>
  <button class="reset" bindtap="initHoles">重置</button>
</view>